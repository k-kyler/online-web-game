@model OnlineWebGame.ViewModels.SignInViewModel
@{
    ViewBag.Title = "Sign In";
    Layout = "_Layout";
}

<div class="position-relative h-100">
    <div class="intro"></div>

    <div class="signUpForm d-flex flex-column">
        @using (Html.BeginForm())
        {
            <h1 class="text-center">SIGN IN</h1>
            <div class="form-group">
                <label class="text-white">Username</label>
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter username" } })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="text-white">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                @if (ViewBag.Error != null)
                {
                    <p class="text-danger">@ViewBag.Error</p>
                }
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-warning">Sign In</button>
            </div>
        }

    </div>
    
    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2021 - Journey powered by KKL Team
        </div>
    </footer>
</div>