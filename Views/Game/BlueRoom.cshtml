@{
    ViewBag.Title = "Blue Room";
    Layout = "_Layout";
}

<div class="position-relative hall h-100">
    <div class="blueRoom"></div>

    <div class="playerinfo">
        @* Username *@
        <span class="playerinfo-username text-white">Khai Bui</span>

        @* Avatar *@
        <div class="playerinfo-avatar position-relative" id="playerInfoModalTrigger">
            <img class="rounded-circle" src="https://avatars.githubusercontent.com/u/66368949?v=4" />
            <div class="playerinfo-level rounded-circle">
                <span>26</span>
            </div>
        </div>

        @* Game progress *@
        <div class="playerinfo-progress text-white ml-3 d-flex flex-column">
            <div class="d-flex align-items-center mb-2">
                <span class="mr-2" style="width: 1.75rem">Task</span>
                <div class="progress">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <span class="ml-2">(1/5)</span>
            </div>

            <div class="d-flex align-items-center">
                <span class="mr-2" style="width: 1.75rem">Exp</span>
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <span class="ml-2">(67%)</span>
            </div>
        </div>
    </div>

    <canvas id="blue_room"></canvas>
    <canvas id="canvas" width=200 height=200></canvas>
    <script>
      window.onload = function() {
          var canvas = document.getElementById("canvas");
          var context = canvas.getContext("2d");
          context.fillStyle = "green";
          context.fillRect(50, 50, 100, 100);
          // no argument defaults to image/png; image/jpeg, etc also work on some
          // implementations -- image/png is the only one that must be supported per spec.
          window.location = canvas.toDataURL("image/png");
      }
    </script>
</div>
