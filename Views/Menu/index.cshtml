@{
    ViewBag.Title = "Menu";
    Layout = "_Layout";
}

<div class="position-relative h-100">
    <div class="intro"></div>

    <form class="menuForm">
        <h1 class="text-center">JOURNEY</h1>
        <br />
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-warning float-right w-100 p-3" data-toggle="modal" data-target="#myModal0">Play Game</button>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-warning float-right w-100 p-3" data-toggle="modal" data-target="#myModal1">Settings</button>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-warning float-right w-100 p-3" data-toggle="modal" data-target="#myModal2">Exit Game</button>
        </div>
    </form>
    <footer class="footer text-muted">
        <div class="container text-center">
            &copy; 2021 - Journey powered by KKL Team
        </div>
    </footer>

    <audio autoplay loop id="audioSource">
        <source src="~/assets/audio.mp3" type="audio/mpeg">
    </audio>
</div>

<!-- Modal Choose Characters -->
<div class="modal fade" id="myModal0" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-custom">
        <div class="modal-content">
            <div class="modal-header align-items-center justify-content-center">
                <h5 class="modal-title">Choose Characters</h5>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row d-flex">
                        <div class="col-md-6 characters">
                            <a href="/Menu/PlayGame?gd=male">
                                <img src="~/assets/gentleman_character.png" alt="Gentleman" class="p-3 characters-img">
                            </a>
                            <h5 class="text-center">Gentleman</h5>
                        </div>
                        <div class="col-md-6 characters">
                            <a href="/Menu/PlayGame?gd=female">
                                <img src="~/assets/ladygirl_character.png" alt="LadyGirl" class="p-3 characters-img">
                            </a>
                            <h5 class="text-center">LadyGirl</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Settings -->
<div class="modal fade" id="myModal1" role="dialog">
    <div class="modal-dialog modal-dialog-custom">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">SETTINGS</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div>
                    <h3 class="text-center">Volume</h3>
                    <input id="volumeBar" class="volume-bar" type="range" min="0" max="100" value="50">
                </div>
                <br />
                <div>
                    <h3 class="text-center">Brightness</h3>
                    <input id="brightnessBar" class="brightness-bar" type="range" min="50" max="150" value="100">
                </div>
            </div>
            <div class="modal-footer">
                <button id="exitGameConfirm" type="button" class="btn btn-warning float-right w-100 p-3" data-toggle="modal" data-target="#myModal2">Exit Game</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Exit -->
<div class="modal fade" id="myModal2" role="dialog">
    <div class="modal-dialog modal-dialog-custom">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">EXIT GAME</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">Are you sure you want to exit?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="signOutButton">Yes, I'm sure</button>
                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

